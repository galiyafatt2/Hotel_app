<% if @review.errors.any? %>
  <h2>The following errors prevented the review from saving:</h2>
  <ul>
    <% @review.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @review do |f| %>
  <p>
    <%= f.label 'Имя' %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label 'Отзыв' %><br>
    <%= f.text_area :review_text %>
  </p>
  <p>
    <%= f.submit "Отправить отзыв на проверку" %>
  </p><% end %>