<% if room.errors.any? %>
  <h2>The following errors prevented the room from saving:</h2>
  <ul>
    <% room.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for :room, url: admin_room_path(room), data: {turbo:false} do |form| %>
  <div>
    <%= form.label :room_name, style: "display: block" %>
    <%= form.text_field :room_name %>
  </div>

  <div>
    <%= form.label :long_description, style: "display: block" %>
    <%= form.text_area :long_description %>
  </div>

  <div>
    <%= form.label :short_description, style: "display: block" %>
    <%= form.text_area :short_description %>
  </div>


  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>
  <br>
  <div>
    <%= form.label "Add images:", style: "display: block" %>
    <%= form.file_field :images, multiple: true %><br>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>

<% end %>