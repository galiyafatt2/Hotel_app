<%= render 'admin/layouts/navigation' %>

<h1 align="center"> Добро пожаловать, администратор! </h1>

<div align="center" style="margin-bottom: 20px">
  <% @rooms.each do |room|%>
      <% room.images.limit(1).each do |image|%>
      <% if image %>
        <%= link_to image_tag(room.images_as_thumbnails(image)), image %>
      <% end %>
      <%end%>
  <% end %>
</div>

<div align="center">
  <table>
    <tr>
      <td>Количество активных броней</td> <td><%=Booking.where("move_out > ?", Date.today).where(accepted: true).count %></td>
    </tr>
    <tr>
      <td>Количество опубликованных отзывов</td> <td><%=Review.where(published: true).count %></td>
    </tr>
    <tr>
      <td>Количество комнат</td> <td><%=Room.count %></td>
    </tr>
  </table>
</div>