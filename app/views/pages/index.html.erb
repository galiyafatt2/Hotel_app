
<%= render 'layouts/navigation' %>

<h1 align="center"> Welcome to our Hotel </h1>

<div align="center">
  <% @rooms.last(3).each do |room|%>
    <% room.images.limit(1).each do |image|%>
      <%= link_to image_tag(room.images_as_thumbnails(image)), image %>
    <%end%>
  <% end %>
</div>
<br> <br>
<p align="center"> <b> Saint-Petersburg's weather: </b> </p>
<div>
  <table border="2" align="center">
      <tr>
        <td><strong>Temperature</strong></td>
        <td><%= @temp %></td>
      </tr>
      <tr>
        <td><strong>Clouds</strong></td>
        <td><%= @clouds %></td>
      </tr>
      <tr>
        <td><strong>Wind</strong></td>
        <td><%= @wind %></td>
      </tr>
  </table>
</div>